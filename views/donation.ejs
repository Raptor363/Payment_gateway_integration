<%- include("partials/header") %>
    <div class="container">
      <div class="left">
        <div class="header">
          <h2>Make your donation</h2>
          <h4>For Home, For Earth...</h4>
        </div>
          <form action="/pay" method="POST">
            <div class="form-group">
              <input
                type="text"
                class="form-control"
                required
                name="name"
                id=""
                placeholder="name"
                required
              />
            </div>
            <div class="form-group">
              <input
                type="email"
                class="form-control"
                required
                name="email"
                id=""
                placeholder="email"
                required
              />
            </div>
            <div class="form-group">
                <input
                  type="number"
                  class="form-control"
                  required
                  name="amount"
                  min=9
                  placeholder="amount"
                required
                />
              </div>
              <br>
            <div class="form-group">
                <button>
                    DONATE
                </button>
            </div>
          </form>
      </div>
      <div class="right"></div>
    </div>
    
<%- include("partials/footer") %>
